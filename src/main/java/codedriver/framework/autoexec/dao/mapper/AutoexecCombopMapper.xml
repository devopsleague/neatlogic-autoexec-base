<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.autoexec.dao.mapper.AutoexecCombopMapper">
    <select id="checkAutoexecCombopIsExists" parameterType="java.lang.Long" resultType="int">
        SELECT COUNT(`id`) FROM `autoexec_combop` WHERE `id` = #{value}
    </select>

    <select id="checkAutoexecCombopNameIsRepeat" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo" resultType="java.lang.Long">
        SELECT `id` FROM `autoexec_combop` WHERE `name` = #{name} AND `id` != #{id} LIMIT 1
    </select>

    <select id="checkAutoexecCombopUkIsRepeat" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo" resultType="java.lang.Long">
        SELECT `id` FROM `autoexec_combop` WHERE `uk` = #{uk} AND `id` != #{id} LIMIT 1
    </select>

    <select id="getAutoexecCombopIsActiveByIdForUpdate" parameterType="java.lang.Long" resultType="java.lang.Integer">
        SELECT `is_active` FROM `autoexec_combop` WHERE `id` = #{value} FOR UPDATE
    </select>

    <select id="getAutoexecCombopById" parameterType="java.lang.Long" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        SELECT
            `id`,
            `uk`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `operation_type` AS operationType,
            `notify_policy_id` AS notifyPolicyId,
            `owner`,
            `config` AS configStr,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `autoexec_combop`
        WHERE `id` = #{value}
    </select>

    <select id="getAutoexecCombopByName" parameterType="java.lang.String" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        SELECT
            `id`,
            `uk`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `operation_type` AS operationType,
            `notify_policy_id` AS notifyPolicyId,
            `owner`,
            `config` AS configStr,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `autoexec_combop`
        WHERE `name` = #{value}
    </select>

    <select id="getAutoexecCombopByIdList" parameterType="java.util.List" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        SELECT
            `id`,
            `uk`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `operation_type` AS operationType,
            `notify_policy_id` AS notifyPolicyId,
            `owner`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `autoexec_combop`
        WHERE `id` in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="getAutoexecCombopCount" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo" resultType="int">
        SELECT
            COUNT(`id`)
        FROM `autoexec_combop`
        <where>
        <if test="keyword != null and keyword != ''">
            AND (`name` LIKE concat('%', #{keyword}, '%') OR `uk` LIKE concat('%', #{keyword}, '%') OR `description` LIKE concat('%', #{keyword}, '%'))
        </if>
        <if test="typeId != null">
            AND `type_id` = #{typeId}
        </if>
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        </where>
    </select>

    <select id="getAutoexecCombopList" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        SELECT
            `id`,
            `uk`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `operation_type` AS operationType,
            `notify_policy_id` AS notifyPolicyId,
            `owner`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `autoexec_combop`
        <where>
        <if test="keyword != null and keyword != ''">
            AND (`name` LIKE concat('%', #{keyword}, '%') OR `uk` LIKE concat('%', #{keyword}, '%') OR `description` LIKE concat('%', #{keyword}, '%'))
        </if>
        <if test="typeId != null">
            AND `type_id` = #{typeId}
        </if>
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        </where>
        ORDER BY `id` DESC
        LIMIT #{startNum}, #{pageSize}
    </select>

    <select id="getAutoexecCombopIdList" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo" resultType="java.lang.Long">
        SELECT
            `id`
        FROM `autoexec_combop`
        <where>
        <if test="keyword != null and keyword != ''">
            AND (`name` LIKE concat('%', #{keyword}, '%') OR `uk` LIKE concat('%', #{keyword}, '%'))
        </if>
        <if test="typeId != null">
            AND `type_id` = #{typeId}
        </if>
        <if test="isActive != null">
            AND `is_active` = #{isActive}
        </if>
        </where>
        ORDER BY `id` DESC
        LIMIT #{startNum}, #{pageSize}
    </select>

    <select id="getAutoexecCombopListByIdList" parameterType="java.lang.Long" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        SELECT
            `id`,
            `uk`,
            `name`,
            `description`,
            `type_id` AS typeId,
            `is_active` AS isActive,
            `operation_type` AS operationType,
            `notify_policy_id` AS notifyPolicyId,
            `owner`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        FROM `autoexec_combop`
        WHERE `id` IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="getAutoexecCombopAuthorityListByCombopIdAndAction" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopAuthorityVo">
        SELECT
            `type`,
            `uuid`
        FROM `autoexec_combop_authority`
        WHERE `combop_id` = #{combopId}
          AND `action` = #{action}
    </select>

    <select id="getAutoexecCombopParamListByCombopId" parameterType="java.lang.Long" resultType="codedriver.framework.autoexec.dto.AutoexecParamVo">
        SELECT
            `key`,
            `name`,
            `default_value` AS defaultValue,
            `description`,
            `is_required` AS isRequired,
            `type`,
            `sort`,
            `config`
        FROM `autoexec_combop_param`
        WHERE `combop_id` = #{combopId}
        ORDER BY `sort`
    </select>

    <select id="getAllAutoexecCombopPasswordParamList"
            resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopParamVo">
        SELECT `combop_id`     AS combopId,
               `key`,
               `name`,
               `default_value` AS defaultValue,
               `description`,
               `is_required`   AS isRequired,
               `type`,
               `sort`
        FROM `autoexec_combop_param`
        where `type` = 'password'
    </select>

    <select id="getAutoexecCombopParamByCombopIdAndKey" resultType="codedriver.framework.autoexec.dto.combop.AutoexecCombopParamVo">
        SELECT
            `combop_id` AS combopId,
            `key`,
            `name`,
            `default_value` AS defaultValue,
            `description`,
            `is_required` AS isRequired,
            `type`,
            `sort`,
            `config`
        FROM `autoexec_combop_param`
        WHERE `combop_id` = #{combopId}
        AND `key` = #{key}
    </select>

    <select id="getAutoexecCombopAuthorityListByCombopIdAndUserUuidAndTeamUuidListAndRoleUuidList" resultType="java.lang.String">
        SELECT
            `action`
        FROM `autoexec_combop_authority`
        WHERE `combop_id` = #{combopId}
        AND (
            (type = 'common' AND `uuid` = 'alluser')
            OR (type = 'user' AND `uuid` = #{userUuid})
            <if test="teamUuidList != null and teamUuidList.size() > 0">
                OR (type = 'team' AND `uuid` IN
                <foreach collection="teamUuidList" item="teamUuid" open="(" separator="," close=")">
                    #{teamUuid}
                </foreach>
                )
            </if>
            <if test="roleUuidList != null and roleUuidList.size() > 0">
                OR (type = 'role' AND `uuid` IN
                <foreach collection="roleUuidList" item="roleUuid" open="(" separator="," close=")">
                    #{roleUuid}
                </foreach>
                )
            </if>
            )
    </select>

    <select id="getExecutableAutoexecCombopIdListByKeywordAndAuthenticationInfo" resultType="java.lang.Long">
        SELECT
            a.`id`
        FROM `autoexec_combop` a
        LEFT JOIN `autoexec_combop_authority` b ON b.`combop_id` = a.`id`
        WHERE (a.`owner` = #{authenticationInfoVo.userUuid}
            OR
            (type = 'common' AND `uuid` = 'alluser')
            OR (type = 'user' AND `uuid` = #{authenticationInfoVo.userUuid})
            <if test="authenticationInfoVo.teamUuidList != null and authenticationInfoVo.teamUuidList.size() > 0">
                OR (type = 'team' AND `uuid` IN
                <foreach collection="authenticationInfoVo.teamUuidList" item="teamUuid" open="(" separator="," close=")">
                    #{teamUuid}
                </foreach>
                )
            </if>
            <if test="authenticationInfoVo.roleUuidList != null and authenticationInfoVo.roleUuidList.size() > 0">
                OR (type = 'role' AND `uuid` IN
                <foreach collection="authenticationInfoVo.roleUuidList" item="roleUuid" open="(" separator="," close=")">
                    #{roleUuid}
                </foreach>
                )
            </if>
            )
        <if test="keyword != null and keyword != ''">
            AND (a.`name` LIKE CONCAT('%', #{keyword}, '%') OR `uk` LIKE concat('%', #{keyword}, '%') OR `description` LIKE concat('%', #{keyword}, '%'))
        </if>
        <if test="typeId != null">
            AND a.`type_id` = #{typeId}
        </if>
    </select>

    <select id="checkAutoexecCombopIdListIsExists" parameterType="java.util.List" resultType="java.lang.Long">
        SELECT `id` FROM `autoexec_combop` WHERE `id` IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="checkItHasBeenGeneratedToCombopByOperationId" parameterType="java.lang.Long" resultType="java.lang.Long">
        SELECT
            `combop_id`
        FROM `autoexec_operation_generate_combop`
        WHERE `operation_id` = #{value}
    </select>

    <insert id="insertAutoexecCombop" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        INSERT INTO `autoexec_combop` (
            `id`,
            `uk`,
            `name`,
            `description`,
            `type_id`,
            `operation_type`,
            `notify_policy_id`,
            `owner`,
            `config`,
            `fcd`,
            `fcu`,
            `lcd`,
            `lcu`
        )
        VALUES
        (
            #{id},
            #{uk},
            #{name},
            #{description},
            #{typeId},
            #{operationType},
            #{notifyPolicyId},
            #{owner},
            #{configStr},
            NOW(3),
            #{fcu},
            NOW(3),
            #{fcu}
        )
    </insert>

    <insert id="insertAutoexecCombopAuthorityVoList" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopAuthorityVo">
        INSERT INTO `autoexec_combop_authority` (
            `combop_id`,
            `type`,
            `uuid`,
            `action`
        )
        VALUES
        <foreach collection="list" item="authorityVo" separator=",">
        (
            #{authorityVo.combopId},
            #{authorityVo.type},
            #{authorityVo.uuid},
            #{authorityVo.action}
        )
        </foreach>
    </insert>

    <insert id="insertAutoexecCombopParamVoList" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopParamVo">
        INSERT INTO `autoexec_combop_param` (
            `combop_id`,
            `key`,
            `name`,
            `default_value`,
            `description`,
            `is_required`,
            `type`,
            `sort`,
            `config`
        )
        VALUES
        <foreach collection="list" item="paramVo" separator=",">
        (
            #{paramVo.combopId},
            #{paramVo.key},
            #{paramVo.name},
            #{paramVo.defaultValueStr},
            #{paramVo.description},
            #{paramVo.isRequired},
            #{paramVo.type},
            #{paramVo.sort},
            #{paramVo.configStr}
        )
        </foreach>
    </insert>

    <insert id="insertAutoexecOperationGenerateCombop">
        INSERT INTO `autoexec_operation_generate_combop` (
            `combop_id`,
            `operation_type`,
            `operation_id`
        )
        VALUES
        (
            #{combopId},
            #{operationType},
            #{operationId}
        )
    </insert>

    <update id="updateAutoexecCombopById" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        UPDATE `autoexec_combop`
        SET
            `uk` = #{uk},
            `name` = #{name},
            `description` = #{description},
            `type_id` = #{typeId},
            `notify_policy_id` = #{notifyPolicyId},
            `owner` = #{owner},
            `config` = #{configStr},
            `lcd` = NOW(3),
            `lcu` = #{lcu}
        WHERE `id` = #{id}
    </update>

    <update id="updateAutoexecCombopIsActiveById" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        UPDATE `autoexec_combop`
        SET
            `is_active` = !`is_active`,
            `lcd` = NOW(3),
            `lcu` = #{lcu}
        WHERE `id` = #{id}
    </update>

    <update id="updateAutoexecCombopConfigById" parameterType="codedriver.framework.autoexec.dto.combop.AutoexecCombopVo">
        UPDATE `autoexec_combop`
        SET
            `config` = #{configStr},
            `lcd` = NOW(3),
            `lcu` = #{lcu}
        WHERE `id` = #{id}
    </update>

    <update id="updateAutoexecCombopPasswordParam">
        update `autoexec_combop_param`
        set `default_value` = #{password}
        where combop_id = #{param.combopId}
          and `key` = #{param.key}
    </update>

    <delete id="deleteAutoexecCombopById" parameterType="java.lang.Long">
        DELETE FROM `autoexec_combop` WHERE `id` = #{value}
    </delete>

    <delete id="deleteAutoexecCombopAuthorityByCombopId" parameterType="java.lang.Long">
        DELETE FROM `autoexec_combop_authority` WHERE `combop_id` = #{value}
    </delete>

    <delete id="deleteAutoexecCombopParamByCombopId" parameterType="java.lang.Long">
        DELETE FROM `autoexec_combop_param` WHERE `combop_id` = #{value}
    </delete>

    <delete id="deleteAutoexecCombopGroupByCombopId" parameterType="java.lang.Long">
        DELETE FROM `autoexec_combop_group` WHERE `combop_id` = #{value}
    </delete>
</mapper>