<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.autoexec.dao.mapper.AutoexecTypeMapper">

    <select id="getTypeById" parameterType="java.lang.Long" resultMap="typeMap">
        select a.`id`,
               a.`name`,
               a.`description`,
               b.auth_type as authType,
               b.auth_uuid as authUuid
        from `autoexec_type` a
                 join autoexec_type_authority b on b.type_id = a.id
        where a.`id` = #{value}
    </select>

    <resultMap id="typeMap" type="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <collection property="autoexecTypeAuthList" ofType="codedriver.framework.autoexec.dto.AutoexecTypeAuthVo">
            <result column="authType" property="authType"/>
            <result column="authUuid" property="authUuid"/>
        </collection>
    </resultMap>

    <select id="getTypeListByIdList" parameterType="java.lang.Long"
            resultType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        select
        `id`,
        `name`,
        `description`
        from
        `autoexec_type`
        where `id` IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="checkTypeNameIsExists" parameterType="codedriver.framework.autoexec.dto.AutoexecTypeVo"
            resultType="int">
        select count(1)
        from `autoexec_type`
        where `name` = #{name}
          and `id` != #{id}
    </select>

    <select id="getTypeIdByName" parameterType="java.lang.String" resultType="java.lang.Long">
        select `id`
        from `autoexec_type`
        where `name` = #{value}
    </select>

    <select id="searchTypeCount" parameterType="codedriver.framework.autoexec.dto.AutoexecTypeVo" resultType="int">
        select
        count(1)
        <include refid="searchType"></include>
    </select>

    <sql id="searchType">
        from `autoexec_type` a
        <if test="isNeedCheckDataAuth == 1">
            join autoexec_type_authority b on a.id = b.type_id
        </if>
        <where>
            <if test="keyword != null and keyword != ''">
                a.`name` LIKE CONCAT('%', #{keyword}, '%')
            </if>
            <if test="isNeedCheckDataAuth == 1">
                and auth_uuid IN
                (
                'alluser'
                <if test="authUuidList != null and authUuidList.size() > 0">
                    ,
                    <foreach collection="authUuidList" item="item" separator=",">
                        #{item}
                    </foreach>
                </if>
                )
            </if>
        </where>
    </sql>

    <select id="searchType" parameterType="codedriver.framework.autoexec.dto.AutoexecTypeVo"
            resultType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        select
        a.`id`,
        a.`name`,
        a.`description`,
        a.`lcu`,
        a.`lcd`
      <include refid="searchType"></include>
        order by `lcd` desc
        <if test="needPage == true">
            LIMIT #{startNum}, #{pageSize}
        </if>
    </select>

    <select id="checkTypeIsExistsById" parameterType="java.lang.Long" resultType="int">
        select count(1)
        from `autoexec_type`
        where `id` = #{value}
    </select>

    <select id="getReferenceCountListForTool" parameterType="java.util.List"
            resultType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        select
        `type_id` as id,
        count(`id`) as referenceCountForTool
        from `autoexec_tool`
        where `type_id` in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        group by `type_id`
    </select>

    <select id="getReferenceCountListForScript" parameterType="java.util.List"
            resultType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        select
        `type_id` as id,
        count(`id`) as referenceCountForScript
        from `autoexec_script`
        where `type_id` in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        group by `type_id`
    </select>

    <select id="getReferenceCountListForCombop" parameterType="java.util.List"
            resultType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        select
        `type_id` as id,
        count(`id`) as referenceCountForCombop
        from `autoexec_combop`
        where `type_id` in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        group by `type_id`
    </select>

    <select id="checkTypeHasBeenReferredById" parameterType="java.lang.Long" resultType="int">
        select sum(refCount)
        from (
                 select count(`id`) as refCount
                 from `autoexec_tool`
                 where `type_id` = #{value}
                 union all
                 select count(`id`) as refCount
                 from `autoexec_script`
                 where `type_id` = #{value}
                 union all
                 select count(`id`) as refCount
                 from `autoexec_combop`
                 where `type_id` = #{value}
             ) a
    </select>

    <insert id="insertType" parameterType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        insert into `autoexec_type`(`id`,
                                    `name`,
                                    `description`,
                                    `type`,
                                    `lcu`,
                                    `lcd`)
        values (#{id},
                #{name},
                #{description},
                #{type},
                #{lcu},
                now(3))
        ON DUPLICATE KEY
            UPDATE `name`        = #{name},
                   `description` = #{description},
                   `type`        = #{type},
                   `lcu`         = #{lcu},
                   `lcd`         = now(3);
    </insert>

    <insert id="insertTypeAuth">
        insert into `autoexec_type_authority`(`type_id`,
        `auth_type`,
        `auth_uuid`)
        values
        <foreach collection="list" separator="," item="authVo">
            (#{authVo.typeId},
            #{authVo.authType},
            #{authVo.authUuid})
        </foreach>
    </insert>

    <update id="updateType" parameterType="codedriver.framework.autoexec.dto.AutoexecTypeVo">
        update `autoexec_type`
        set `name`        = #{name},
            `description` = #{description},
            `lcu`         = #{lcu},
            `lcd`         = now(3)
        where `id` = #{id}
    </update>

    <delete id="deleteTypeById" parameterType="java.lang.Long">
        delete
        from `autoexec_type`
        where `id` = #{value}
    </delete>

    <delete id="deleteTypeAuthByTypeId">
        delete
        from `autoexec_type_authority`
        where `type_id` = #{value}
    </delete>
</mapper>

